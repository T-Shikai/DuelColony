<% if Book.find_by(end_user: current_end_user, topic: topic) %>
  <%= link_to topic_books_path(topic), method: :delete, remote: true, class: "text-warning" do %>
    <i class="fas fa-star"></i>
  <% end %>
<% else %>
  <%= link_to topic_books_path(topic), method: :post, remote: true, class: "text-warning" do %>
    <i class="far fa-star"></i>
  <% end %>
<% end %>
<% if topic.books.count != 0 %>
  <%= topic.books.count %>
<% end %>