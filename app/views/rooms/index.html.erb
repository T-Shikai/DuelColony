<div class="container">
  <div class="row">
    <div class="offset-md-2">
      <h1>対戦一覧</h1>
      <div class="btn-group" role="group">
        <%= link_to '募集中', rooms_path(devide: 0), class:"btn btn-outline-light" %>
        <%= link_to '応募〜対戦中', rooms_path(devide: 1), class:"btn btn-outline-light" %>
        <%= link_to '対戦済み', rooms_path(devide: 2), class:"btn btn-outline-light" %>
        <%= link_to '自分が参加中！', rooms_path(devide: 3), class:"btn btn-outline-light" %>
      </div>
      <div class="new-room_id mt-3 mb-2">
        <%= link_to '対戦募集する', new_room_path, class:"btn btn-light" %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="room-list offset-md-2 col-md-8">
      <%= render 'rooms/room-list', rooms: @rooms %>
      <%= paginate @rooms %>
    </div>
  </div>
</div>