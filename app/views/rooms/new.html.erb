<div class="container">
  <div class="row">
    <div class="offset-md-1 col-md-7">
      <h1>対戦募集</h1>
    </div>
    <div class="col book-mark d-flex align-items-center">
      <%= link_to '対戦一覧へ', rooms_path, class: "btn btn-outline-light" %>
    </div>
  </div>
  <div class="row">
    <div class="offset-md-2 col-md-7 form text-white">
      <%= form_with model: @room, local: true do |f| %>
        <div class="form-group">
          <%= f.label :title, "タイトル" %>
          <%= f.text_field :title, placeholder: "対戦お願いします！", class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :content, "ルール・詳細" %>
          <%= f.text_area :content, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.submit "募集する", class: 'btn btn-success' %>
        </div>
      <% end %>
    </div>
  </div>
</div>



