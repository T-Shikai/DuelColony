<div class="container">
  <div class="row">
    <div class="col text-white">
      <h1>大会を開催する</h1>
      <%= form_with model: @tournament, local: true do |f| %>
        <div class="form-group">
          <%= f.label :title, "大会名" %>
          <%= f.text_field :title, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :content, "ルール・詳細" %>
          <%= f.text_area :content, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :max, "最大募集人数" %>
          <%= f.number_field :max, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.submit "募集する", class: 'btn btn-success' %>
        </div>
      <% end %>
    </div>
  </div>
</div>