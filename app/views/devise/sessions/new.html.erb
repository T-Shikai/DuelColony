<div class="container">
  <div class="row">
    <div class="offset-md-3 col-md-5 text-white">
      <h1>ログイン</h1>

      <%= form_with model: @end_user, url: end_user_session_path, local: true do |f| %>
        <div class="field">
          <%= f.label :メールアドレス %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
        </div>

        <div class="field mt-4">
          <%= f.label :パスワード %><br />
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
        </div>

        <!--<% if devise_mapping.rememberable? %>-->
        <!--  <div class="field">-->
        <!--    <%= f.check_box :remember_me %>-->
        <!--    <%= f.label :remember_me %>-->
        <!--  </div>-->
        <!--<% end %>-->

        <div class="actions mt-3">
          <%= f.submit "ログイン", class: "btn btn-success" %>
          <span class="float-right mt-3">
            <%= link_to '新規登録はこちら', new_end_user_registration_path, class: "text-warning" %>
          </span>
        </div>
      <% end %>

      <!--<%= render "devise/shared/links" %>-->
    </div>
  </div>
</div>
