<h1>アカウント情報編集</h1>

<div class="form">
  <%= form_with model: current_end_user, url: end_user_path(current_end_user), local: true do |f| %>
    <div class="form-group row">
      <%= f.label :image, "アイコン画像", class: "col-md-3" %>
      <%= f.attachment_field :image, class: "col-md-8" %>
    </div>
    <div class="form-group row">
      <%= f.label :name, "名前", class: "col-md-3" %>
      <%= f.text_field :name, placeholder: "なまえ", class: "form-control col-md-8" %>
    </div>
    <div class="form-group row">
      <%= f.label :introduction, "コメント", class: "col-md-3" %>
      <%= f.text_area :introduction, placeholder: "コメント", class: "form-control col-md-8" %>
    </div>
    <div class="form-group col-md-12 text-center">
      <%= f.submit "変更を保存", class: 'btn btn-success' %>
    </div>
  <% end %>
</div>