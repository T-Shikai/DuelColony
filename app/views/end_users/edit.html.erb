<div class="container">
  <div class="row">
    <div class="offset-md-3 col-md-6 text-white">
      <h1>アカウント情報編集</h1>
      <div>
        <%= form_with model: current_end_user, url: end_user_path(current_end_user), local: true do |f| %>
          <div class="form-group mt-3">
            <%= f.label :image, "アイコン画像" %><br />
            <%= attachment_image_tag(current_end_user, :image, fallback: "no-user-image-icon.jpg", size: "100x100" ) %>
            <%= f.attachment_field :image, class:"btn btn-outline-light" %>
          </div>
          <div class="form-group">
            <%= f.label :name, "名前" %>
            <%= f.text_field :name, placeholder: "なまえ", class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :introduction, "コメント" %>
            <%= f.text_area :introduction, placeholder: "コメント", class: "form-control" %>
          </div>
          <div>
            <%= f.submit "変更を保存", class: 'btn btn-success' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
